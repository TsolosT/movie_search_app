<% include partials/header %>


<div class="container extra-m">
    <div class="row mb-5">
        <h3>Results for &quot;
            <%= sTitle %>
            &quot;
        </h3>
        <h4>Found
            <%=data["Search"].length%> Movies</h4>
    </div>
    <div class="row">
        <% data["Search"].forEach(function(movie){ %>
        <div class="col-sm-10 col-md-4 mb-3">
            <div class="card" style="width: 18rem;">
                <img src='<%= movie["Poster"] %>' class="card-img-top" alt='<%= movie["Title"] %>'>
                <div class="card-body">
                    <h5 class="card-title">
                        <%= movie["Title"] %>
                    </h5>
                    <p class="card-text">
                        <%= movie["Year"] %>
                    </p>
                    <a href="#" class="btn btn-outline-success btn-small">Watch Now</a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>




<% include partials/footer %>
